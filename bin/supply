#!/usr/bin/env bash

set -e

# Absolute path
BIN_DIR=$(cd $(dirname $0) && pwd)

BUILD_DIR=$1
CACHE_DIR=$2
DEPS_DIR=$3
INDEX=$4

RUNDECK_APP_DIR=${BUILD_DIR}/rundeck

source ${BIN_DIR}/../vars.sh

echo "-----> Installing java"
wget --no-check-certificate -q -c \
        --header "Cookie: oraclelicense=accept-securebackup-cookie" \
        ${JRE_URL} -O ${BIN_DIR}/jre.zip

mkdir ${BUILD_DIR}/.java

# Unpack jre content directly to .java in BUILD_DIR
# -C is the directory, strip-components removes the top-level folder (jre_1.8.....)
tar zxf ${BIN_DIR}/jre.zip -C ${BUILD_DIR}/.java --strip-components 1

sleep 2

##################################################################################
# Download Rundeck
##################################################################################
echo "-----> Downloading rundeck"
if [ -z ${RUNDECK_VERSION+x} ];
then
    echo "RUNDECK_VERSION is not set. Add it to your manifest.yml file (i.e. RUNDECK_VERSION: \"2.11.3\") to fix this error."
    exit 1
fi

mkdir -p ${RUNDECK_APP_DIR}
wget "${RUNDECK_DIST_URL}${RUNDECK_JAR}" -O ${RUNDECK_APP_DIR}/rundeck.jar --no-check-certificate -q

sleep 2


##################################################################################
# Install Rundeck
##################################################################################
echo "-----> Installing Rundeck"
export PATH=$PATH:${BUILD_DIR}/.java/bin
export RDECK_BASE=${RUNDECK_APP_DIR}

java -jar ${RUNDECK_APP_DIR}/rundeck.jar \
        -b ${RUNDECK_APP_DIR} \
        --installonly \
        -d

sleep 2

##################################################################################
# Install Plugins
##################################################################################
echo "-----> Installing plugins"

if [ -f "${BUILD_DIR}/rundeck-plugins.yml" ]; then

    RUNDECK_PLUGIN_BASE_URL=https://github.com/rundeck-plugins/
    RUNDECK_PLUGIN_DIR="${RUNDECK_APP_DIR}/libext"

    mkdir -p "${RUNDECK_PLUGIN_DIR}"

    # read file line by line even if there is no newline at the very end
    # thanks https://stackoverflow.com/questions/10929453/read-a-file-line-by-line-assigning-the-value-to-a-variable#comment42383654_10929511
    while IFS=': ' read -r PLUGIN_NAME PLUGIN_VERSION || [[ -n $PLUGIN_NAME ]]; do

        PLUGIN_URL="${RUNDECK_PLUGIN_BASE_URL}/${PLUGIN_NAME}/releases/download/v${PLUGIN_VERSION}/${PLUGIN_NAME}-${PLUGIN_VERSION}.jar"
        PLUGIN_PATH="${RUNDECK_PLUGIN_DIR}/${PLUGIN_NAME}-${PLUGIN_VERSION}.jar"

        echo "       Installing ${PLUGIN_NAME} (${PLUGIN_VERSION})"
        echo "           from $PLUGIN_URL"
        echo "           to $PLUGIN_PATH"
        wget ${PLUGIN_URL} -O "${PLUGIN_PATH}" --no-check-certificate

    done < ${BUILD_DIR}/rundeck-plugins.yml
else
    echo "       No rundeck-plugins.yml found, skipping..."
fi

