#!/usr/bin/env bash

# Absolute path
BIN_DIR=$(cd $(dirname $0) && pwd)

BUILD_DIR=$1
CACHE_DIR=$2
DEPS_DIR=$3
INDEX=$4

echo "-----> Symlinking properties"
mkdir -p ${BUILD_DIR}/server/config
cd ${BUILD_DIR}/server/config
ln -s ../../rundeck-config.properties rundeck-config.properties

echo "-----> Creating start script"
cp ${BIN_DIR}/../startSonarQube.sh ${BUILD_DIR}/startSonarQube.sh
chmod +x ${BUILD_DIR}/startSonarQube.sh
